@model Electronicos_MVC.Models.Productos

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Detalles del Producto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Nombre_Producto)</dt>
        <dd>@Html.DisplayFor(model => model.Nombre_Producto)</dd>

        <dt>@Html.DisplayNameFor(model => model.Existencia)</dt>
        <dd>@Html.DisplayFor(model => model.Existencia)</dd>

        <dt>@Html.DisplayNameFor(model => model.Descripcion)</dt>
        <dd>@Html.DisplayFor(model => model.Descripcion)</dd>

        <dt>@Html.DisplayNameFor(model => model.Precio)</dt>
        <dd>@Html.DisplayFor(model => model.Precio)</dd>

        <dt>@Html.DisplayNameFor(model => model.URL_Imagen)</dt>
        <dd>@Html.DisplayFor(model => model.URL_Imagen)</dd>

        <dt>@Html.DisplayNameFor(model => model.Procesador)</dt>
        <dd>@Html.DisplayFor(model => model.Procesador)</dd>

        <dt>@Html.DisplayNameFor(model => model.RAM)</dt>
        <dd>@Html.DisplayFor(model => model.RAM)</dd>

        <dt>@Html.DisplayNameFor(model => model.DiscoDuro)</dt>
        <dd>@Html.DisplayFor(model => model.DiscoDuro)</dd>

        <dt>@Html.DisplayNameFor(model => model.Categorias.Nombre_Categoria)</dt>
        <dd>@Html.DisplayFor(model => model.Categorias.Nombre_Categoria)</dd>

        <dt>@Html.DisplayNameFor(model => model.Marcas.Nombre_Marca)</dt>
        <dd>@Html.DisplayFor(model => model.Marcas.Nombre_Marca)</dd>
    </dl>

    <!-- Formulario para eliminar el producto -->
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <!-- Botón de eliminación con estilo destacado -->
            <input type="submit" value="Eliminar" class="btn btn-danger"
                   onclick="return confirm('¿Estás seguro de que deseas eliminar este producto?');" /> |
            @Html.ActionLink("Volver a la Lista", "Index", new { @class = "btn btn-secondary" })
        </div>
    }
</div>
