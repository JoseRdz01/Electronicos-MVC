@model IEnumerable<Electronicos_MVC.Models.Productos>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nuevo Producto", "Create", null, new { @class = "btn btn-primary mb-3" })
</p>
<table class="table table-striped table-hover table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.Nombre_Producto)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Existencia)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Descripcion)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Precio)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Procesador)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.RAM)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.DiscoDuro)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Categorias.Nombre_Categoria)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Marcas.Nombre_Marca)</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre_Producto)</td>
                <td>@Html.DisplayFor(modelItem => item.Existencia)</td>
                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                <td>@Html.DisplayFor(modelItem => item.Precio)</td>
                <td>@Html.DisplayFor(modelItem => item.Procesador)</td>
                <td>@Html.DisplayFor(modelItem => item.RAM)</td>
                <td>@Html.DisplayFor(modelItem => item.DiscoDuro)</td>
                <td>@Html.DisplayFor(modelItem => item.Categorias.Nombre_Categoria)</td>
                <td>@Html.DisplayFor(modelItem => item.Marcas.Nombre_Marca)</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.ID_Producto })" class="btn btn-sm btn-warning">Editar</a>
                    <a href="@Url.Action("Details", new { id = item.ID_Producto })" class="btn btn-sm btn-info">Detalles</a>
                    <a href="@Url.Action("Delete", new { id = item.ID_Producto })" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>


