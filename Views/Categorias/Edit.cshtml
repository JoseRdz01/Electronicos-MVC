@model Electronicos_MVC.Models.Categorias

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container mt-4">
        <h4 class="text-center mb-4">Editar Categoría</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.ID_Categoria)

        <div class="form-group row">
            @Html.LabelFor(model => model.Nombre_Categoria, htmlAttributes: new { @class = "col-md-3 col-form-label" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Nombre_Categoria, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre_Categoria, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Existencia_Total, htmlAttributes: new { @class = "col-md-3 col-form-label" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Existencia_Total, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Existencia_Total, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-12 text-center">
                <input type="submit" value="Guardar" class="btn btn-success btn-lg" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-12 text-center">
                @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-secondary btn-lg" })
            </div>
        </div>
    </div>
}
