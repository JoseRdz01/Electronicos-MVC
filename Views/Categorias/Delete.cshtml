@model Electronicos_MVC.Models.Categorias

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div class="container mt-4">
    <h4 class="text-center mb-4">Detalles de la Categoría</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Nombre_Categoria)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Nombre_Categoria)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Existencia_Total)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Existencia_Total)
        </dd>
    </dl>

    <div class="form-actions no-color text-center">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <input type="submit" value="Eliminar" class="btn btn-danger btn-lg" />
            <span class="mx-2">|</span>
            @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-secondary btn-lg" })
        }
    </div>
</div>

