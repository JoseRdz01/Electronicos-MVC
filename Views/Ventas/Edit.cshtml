@model Electronicos_MVC.Models.Ventas

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container bg-light p-4 rounded shadow">
        <h3 class="text-center text-primary mb-4">Editar Venta</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
        @Html.HiddenFor(model => model.ID_Venta)

        <div class="mb-3">
            @Html.LabelFor(model => model.Producto_ID, "Producto", htmlAttributes: new { @class = "form-label" })
            @Html.DropDownList("Producto_ID", null, htmlAttributes: new { @class = "form-select" })
            @Html.ValidationMessageFor(model => model.Producto_ID, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Ganancia, htmlAttributes: new { @class = "form-label" })
            @Html.EditorFor(model => model.Ganancia, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Ganancia, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Fecha_Venta, htmlAttributes: new { @class = "form-label" })
            @Html.EditorFor(model => model.Fecha_Venta, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Fecha_Venta, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Sucursal_ID, "Sucursal", htmlAttributes: new { @class = "form-label" })
            @Html.DropDownList("Sucursal_ID", null, htmlAttributes: new { @class = "form-select" })
            @Html.ValidationMessageFor(model => model.Sucursal_ID, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(model => model.Cantidad, htmlAttributes: new { @class = "form-label" })
            @Html.EditorFor(model => model.Cantidad, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Cantidad, "", new { @class = "text-danger" })
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Guardar
            </button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver a la lista
            </a>
        </div>
    </div>
}
>
