@model Electronicos_MVC.Models.Ventas

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container bg-light p-4 rounded shadow">
        <h3 class="text-center mb-4 text-primary">Registrar Venta</h3>
        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">@Html.LabelFor(model => model.Producto_ID, "Producto")</label>
                @Html.DropDownList("Producto_ID", null, new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.Producto_ID, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                <label class="form-label">@Html.LabelFor(model => model.Ganancia)</label>
                @Html.EditorFor(model => model.Ganancia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ganancia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">@Html.LabelFor(model => model.Fecha_Venta)</label>
                @Html.EditorFor(model => model.Fecha_Venta, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Fecha_Venta, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                <label class="form-label">@Html.LabelFor(model => model.Sucursal_ID, "Sucursal")</label>
                @Html.DropDownList("Sucursal_ID", null, new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.Sucursal_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label">@Html.LabelFor(model => model.Cantidad)</label>
                @Html.EditorFor(model => model.Cantidad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Cantidad, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                <label class="form-label">Imagen (Opcional)</label>
                <input type="file" class="form-control" />
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <a href="@Url.Action("Index")" class="btn btn-secondary">Volver a la lista</a>
            <button type="submit" class="btn btn-primary">Registrar</button>
        </div>
    </div>
}
