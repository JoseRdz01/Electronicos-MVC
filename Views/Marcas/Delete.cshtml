@model Electronicos_MVC.Models.Marcas

@{
    ViewBag.Title = "Delete";
}


<div class="container">
    <h3 class="text-danger">Are you sure you want to delete this?</h3>
    <div class="well">
        <h4>Marca Details</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nombre_Marca)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Nombre_Marca)
            </dd>
        </dl>
    </div>

    <div class="form-actions">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="row">
                <!-- Botón de Eliminar con estilo de peligro (rojo) -->
                <div class="col-md-6">
                    <input type="submit" value="Delete" class="btn btn-lg btn-danger btn-block" />
                </div>
                <!-- Enlace para regresar a la lista -->
                <div class="col-md-6">
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-lg btn-secondary btn-block" })
                </div>
            </div>
        }
    </div>
</div>

