@model Electronicos_MVC.Models.Marcas

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container mt-4">
        <h4 class="text-center mb-4">Editar Marca</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.ID_Marca)

        <div class="form-group row">
            @Html.LabelFor(model => model.Nombre_Marca, htmlAttributes: new { @class = "col-md-3 col-form-label" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Nombre_Marca, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre_Marca, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-12 text-center">
                <input type="submit" value="Guardar" class="btn btn-success btn-lg" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-12 text-center">
                @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-secondary btn-lg" })
            </div>
        </div>
    </div>
}
