@model Electronicos_MVC.Models.ProductoSucursales

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div class="container bg-light p-4 rounded shadow">
    <h3 class="text-center text-primary">Detalles del Producto en Sucursal</h3>
    <hr />

    <!-- Información del Producto y Sucursal -->
    <div class="row">
        <div class="col-md-6">
            <h5 class="text-muted">Existencia</h5>
            <p class="text-dark">@Html.DisplayFor(model => model.Existencia)</p>
        </div>
        <div class="col-md-6">
            <h5 class="text-muted">Producto</h5>
            <p class="text-dark">@Html.DisplayFor(model => model.Productos.Nombre_Producto)</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h5 class="text-muted">Sucursal</h5>
            <p class="text-dark">@Html.DisplayFor(model => model.Sucursales.Nombre_Sucursal)</p>
        </div>
    </div>

    <!-- Formulario de Eliminación -->
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions text-center mt-4">
            <!-- Botón de Eliminar -->
            <input type="submit" value="Eliminar" class="btn btn-danger me-2" />
            <!-- Botón de Volver -->
            @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>

