@model Electronicos_MVC.Models.ProductoSucursales

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container bg-light p-4 rounded shadow">
        <h3 class="text-center text-primary">Producto en Sucursal</h3>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_Existencia_Sucursal)

        <!-- Dropdown Producto -->
        <div class="mb-3">
            @Html.LabelFor(model => model.ID_Producto, "Producto", new { @class = "form-label" })
            @Html.DropDownList("ID_Producto", null, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ID_Producto, "", new { @class = "text-danger" })
        </div>

        <!-- Dropdown Sucursal -->
        <div class="mb-3">
            @Html.LabelFor(model => model.ID_Sucursal, "Sucursal", new { @class = "form-label" })
            @Html.DropDownList("ID_Sucursal", null, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ID_Sucursal, "", new { @class = "text-danger" })
        </div>

        <!-- Campo Existencia -->
        <div class="mb-3">
            @Html.LabelFor(model => model.Existencia, "Existencia", new { @class = "form-label" })
            @Html.EditorFor(model => model.Existencia, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Existencia, "", new { @class = "text-danger" })
        </div>

        <!-- Botón de Guardar -->
        <div class="text-center">
            <button type="submit" class="btn btn-primary me-2">Guardar</button>
            @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
}
