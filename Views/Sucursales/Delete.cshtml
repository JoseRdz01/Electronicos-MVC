@model Electronicos_MVC.Models.Sucursales

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div class="container bg-light p-4 rounded shadow">
    <h3 class="text-center text-danger">Eliminar Sucursal</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-4 text-muted">Nombre</dt>
        <dd class="col-sm-8 text-dark">@Html.DisplayFor(model => model.Nombre_Sucursal)</dd>

        <dt class="col-sm-4 text-muted">Calle</dt>
        <dd class="col-sm-8 text-dark">@Html.DisplayFor(model => model.Calle)</dd>

        <dt class="col-sm-4 text-muted">Número</dt>
        <dd class="col-sm-8 text-dark">@Html.DisplayFor(model => model.Numero)</dd>

        <dt class="col-sm-4 text-muted">Colonia</dt>
        <dd class="col-sm-8 text-dark">@Html.DisplayFor(model => model.Colonia)</dd>

        <dt class="col-sm-4 text-muted">Código Postal</dt>
        <dd class="col-sm-8 text-dark">@Html.DisplayFor(model => model.CP)</dd>

        <dt class="col-sm-4 text-muted">Teléfono</dt>
        <dd class="col-sm-8 text-dark">@Html.DisplayFor(model => model.Tel)</dd>
    </dl>
    <hr />
    <div class="text-center">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <p class="text-danger">¿Estás seguro de que deseas eliminar esta sucursal?</p>
            <button type="submit" class="btn btn-danger me-2">Eliminar</button>
            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-secondary" })
        }
    </div>
</div>

