@model Electronicos_MVC.Models.Sucursales

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="container bg-light p-4 rounded shadow">
    <h3 class="text-center text-primary">Detalles de la Sucursal</h3>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <h5 class="text-muted">Nombre</h5>
            <p class="text-dark">@Html.DisplayFor(model => model.Nombre_Sucursal)</p>
        </div>
        <div class="col-md-6">
            <h5 class="text-muted">Calle</h5>
            <p class="text-dark">@Html.DisplayFor(model => model.Calle)</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h5 class="text-muted">Número</h5>
            <p class="text-dark">@Html.DisplayFor(model => model.Numero)</p>
        </div>
        <div class="col-md-6">
            <h5 class="text-muted">Colonia</h5>
            <p class="text-dark">@Html.DisplayFor(model => model.Colonia)</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h5 class="text-muted">Código Postal</h5>
            <p class="text-dark">@Html.DisplayFor(model => model.CP)</p>
        </div>
        <div class="col-md-6">
            <h5 class="text-muted">Teléfono</h5>
            <p class="text-dark">@Html.DisplayFor(model => model.Tel)</p>
        </div>
    </div>
    <div class="text-center mt-4">
        @Html.ActionLink("Editar", "Edit", new { id = Model.ID_Sucursal }, new { @class = "btn btn-primary me-2" })
        @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>
